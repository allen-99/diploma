{% include "layout.html.jinja2" %}
<div class="pt-10 md:px-20 px-5">
    <h3 class="text-lg font-bold">Добавить новую компанию</h3>
    <form method="post">
        {% csrf_token %}
        <label class="label">
            <span class="label-text"> Название: </span>
        </label>
        <div class="w-full">
            <input type="text" name="company_name" placeholder="Введите название" class="input input-bordered w-full"
                   required/>
        </div>
        <label class="label cursor-pointer">
            <span class="label-text">Сделать компанию для всех пользователей доступной</span>
            <input type="checkbox" checked="checked" class="checkbox" name="is_public"/>
        </label>
        <button type="submit" class="btn btn-block mt-10 form-control">Добавить</button>
    </form>
</div>